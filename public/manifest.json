{
  "name": "Savings and Deals",
  "description": "Save big and get good deals!",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": ["activeTab", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://shopee.ph/*"],
      "css": [],
      "js": ["shopee-content.js"],
      "run_at": "document_end"
    }
  ],
  "host_permissions": ["https://shopee.ph/"],
  "icons": {
    "128": "icon128.png"
  },
  "action": {
    "default_icon": {
      "128": "icon128.png"
    },
    "default_title": "Savings and Deals"
  }
}
