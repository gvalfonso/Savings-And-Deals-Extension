{
  "name": "Savings and Deals",
  "description": "An online shopping helper that finds you the best deals with the best savings when you shop online.",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": ["activeTab", "scripting", "webRequest"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://shopee.ph/*"],
      "css": ["savings-and-deals-css.css"],
      "js": ["shopee-content.js"]
    }
  ],
  "host_permissions": ["https://shopee.ph/"],
  "icons": {
    "128": "icon128.png"
  },
  "action": {
    "default_icon": {
      "128": "icon128.png"
    },
    "default_title": "Savings and Deals"
  },
  "web_accessible_resources": [
    {
      "resources": ["helper-display.html", "icon128.png", "icon128letters.png"],
      "matches": ["https://shopee.ph/*"]
    }
  ]
}
